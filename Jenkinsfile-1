pipeline {
    agent any

    tools {
        nodejs "node"
    }

    stages {

        stage('Cloning Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/IM23a-tutkuno/traffic-light-nodeapp.git'
            }
        }

        stage('Install jest-cli') {
            steps {
                sh 'npm install -g jest-cli'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
